@page "/"
@namespace Blazor.Bootstrap.ServerSide.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazor.Bootstrap.ServerSide</title>
    <base href="~/" />
    <link rel="stylesheet" href="_content/BlazorStrap/css/submenu.css" />
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<Blazor.Bootstrap.App>(RenderMode.ServerPrerendered))
    </app>

    <script src="_framework/blazor.server.js"></script>

    <!-- The below two files are needed by BlazorStrap -->
    <script src="_content/BlazorStrap/blazorStrap.js"></script>
    <script src="_content/BlazorStrap/popper.min.js"></script>
</body>
</html>
